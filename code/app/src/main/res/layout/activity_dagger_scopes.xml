<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/normalIntroDemoScopeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/normal_intro_demo_scope" />

    <Button
        android:id="@+id/applicationScopeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/application_scoping" />

    <Button
        android:id="@+id/customScopeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_scoping" />

</LinearLayout>